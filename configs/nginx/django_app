server {
	listen 80;
	server_name localhost;

	# Static files
	location /static/ {
		alias /home/jindrew/linux-admin-lab/django_app/staticfiles/;
		expires 30d;
	}

	# Media files
	location /media/ {
		alias /home/jindrew/linux-admin-lab/django_app/media/;
		expires 30d;
	}

	# Main app
	location / {
		proxy_pass http://127.0.0.1:8000;
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
	}

	# Accessing logs via the web (only demo)
	location /nginx_status {
		stub_status on;
		access_log off;
		allow 127.0.0.1;
		deny all;
	}
}
